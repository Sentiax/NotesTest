            document.getElementById("ppb").hidden = false;
        }
    }

    setInterval(()=> {
    if(localStorage.getItem("notes") > 0) {
        document.getElementById("pwp").hidden = true;
    } else {
        document.getElementById("pwp").hidden = false;
    }
}, 100)
    setTimeout(()=> {
        document.getElementsByClassName("loader")[0].setAttribute("class","spinner animate__animated animate__fadeOut animate__repeat-1")
    }, 5000)
    setTimeout(()=> {
        document.getElementById("sppp").remove();
        document.getElementById("ppp").setAttribute("class","page animate__animated animate__fadeIn animate__repeat-1")
        document.getElementById("ppp").hidden = false;
        setTimeout(()=> {

            document.getElementById("nbtn").setAttribute("Style","top: -30px")
        }, 500)
    }, 5300);
